<header class="header">
	<div class="">
		{{> logo}}
	</div>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

{{#with main}}
<div class="main">
	<div class="main_content">
		<h1 class="main_title">{{heading}}</h1>
		<p class="main_text">{{descriotion}}</p>
		<a href="{{href}}" class="button form_button">{{button}}</a>
	</div>
	<img src="{{image}}" alt="Main image" class="main_image">
</div>
{{/with}}

<main class="featured">
	{{#each featured}}
	<div class="card">
		<img src="{{photo}}" alt="card photo" class="card_photo">
		<h2 class="card_heading">{{heading}}</h2>
		<p class="card_info">{{info}}</p>
		<a href="{{linkUrl}}" class="button card_button">{{linkText}}</a>
	</div>
	{{/each}}
</main>

<hr class="divider">

<div class="flex">
	{{#each actions}}
	<div class="actions">
		<h3 class="actions_heading">{{heading}}</h3>
		<a href="{{url}}" class="actions_button">{{text}}</a>

	</div>
	{{/each}}
</div>

<footer class="footer">
	<div>
		{{> logo}}

		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>
	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>