{{> headerDark }}

<main class="hero">
	{{#with hero}}
	<h1 class="title_hero">{{title}}</h1>
	<p class="hero_desc">{{description}}</p>
	<a href="{{button.url}}" class="button hero_button">{{button.text}}</a>
	{{/with}}
</main>

<div class="about">
	{{#with about}}
	<h3 class="about_heading">{{heading}}</h3>
	<p class="about_info">{{info}}</p>
	{{/with}}
</div>

<div class="articles">
	<div class="articles_title">
		<h2 class="articles_text">Out Articles</h2>
		<a href="#" class="button articles_but">View All</a>
	</div>
	<div class="articles_block">
		{{#each articles}}
		{{> articleCardDark}}
		{{/each}}
	</div>
</div>

{{> footerDark}}